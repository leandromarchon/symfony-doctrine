{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listagem de Animais</h1>
    <hr>

    <div class="row">
        <div class="col-md-12">
            <a href="" class="btn btn-primary pull-right">Cadastrar Animal</a>
        </div>
    </div>

    <table class="table table-hover table-striped mt-3">
        <thead>
            <tr>
                <td>Cod.</td>
                <td>Nome</td>
                <td>Data de Nascimento</td>
            </tr>
        </thead>
        <tbody>
            {% for animal in animais %}
                <tr>
                    <td>{{ animal.id }}</td>
                    <td><a href="">{{ animal.nome }}</a></td>
                    <td>{{ animal.dataNascimento }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">NÃ£o foi encontrado nenhum registro!</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
